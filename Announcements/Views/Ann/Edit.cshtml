@model Announcements.Models.Announ

@{
    ViewBag.Title = "Создать объявление";
}

<h2>Создать объявление</h2>

@Html.ValidationSummary(true)

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(a => a.AnnTitle, "Название")
        @Html.TextBoxFor(a => a.AnnTitle, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Salary, "Зарплата")
        @Html.TextBoxFor(a => a.Salary, new { @class = "form-control" })
    </div>

    <br />
    <div class="form-group">
        @Html.LabelFor(a => a.Description, "Описание")
        @Html.TextAreaFor(a => a.Description, 5, 10, new { @class = "form-control" })
    </div>

    <input type="submit" value="Сохранить" class="btn btn-primary">
}